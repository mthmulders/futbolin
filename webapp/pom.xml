<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>it.mulders.futbolin</groupId>
        <artifactId>futbolin-parent</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>
    <artifactId>futbolin-webapp</artifactId>
    <packaging>war</packaging>

    <name>Futbol√≠n :: Web App</name>

    <properties>
        <krazo.version>1.1.0</krazo.version>

        <testcontainers.version>1.15.3</testcontainers.version>

        <client.truststore>${project.build.directory}/keystore.p12</client.truststore>
        <client.truststore.password>b4kBMqf6Y4pV</client.truststore.password>

        <liberty.var.client.keystore.file>${client.truststore}</liberty.var.client.keystore.file>
        <liberty.var.client.keystore.password>${client.truststore.password}</liberty.var.client.keystore.password>
    </properties>

    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.3.1</version>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>keytool-maven-plugin</artifactId>
                <version>1.5</version>
                <configuration>
                    <keystore>${client.truststore}</keystore>
                    <storepass>${client.truststore.password}</storepass>
                    <storetype>pkcs12</storetype>
                </configuration>
                <executions>
                    <execution>
                        <id>remove-file</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>import-google-trust-services</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>importCertificate</goal>
                        </goals>
                        <configuration>
                            <alias>google-trust-services</alias>
                            <file>${project.basedir}/src/main/certs/google-trust-services.pem</file>
                            <noprompt>true</noprompt>
                            <trustcacerts>false</trustcacerts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>io.openliberty.tools</groupId>
                <artifactId>liberty-maven-plugin</artifactId>
                <configuration>
                    <libertyRuntimeVersion>21.0.0.3</libertyRuntimeVersion>
                    <serverXmlFile>src/main/liberty/server.xml</serverXmlFile>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
